.invite {
  width: 100%;
  height: 100%;
}
.invite .invite-box {
  width: 570rpx;
  height: 714rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background: #FE5E50;
  padding: 0 60rpx;
  padding-bottom: 142rpx;
  border-radius: 7px;
  box-sizing: border-box;
}
.invite .invite-box .invite-header {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  text-align: center;
  padding-top: 60rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.invite .invite-box .invite-center-box .invite-center-box-wrapper {
  width: 100%;
  position: relative;
}
.invite .invite-box .invite-center-box .qrcode {
  width: 366rpx;
  height: 366rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.invite .save-image {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FE5E50;
}

