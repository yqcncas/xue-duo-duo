page {
  background: #f6f6f6;
}
.container {
  background: #fff;
}
.container .ipt-container {
  padding: 30rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .ipt-container text {
  margin-right: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #A6A6A6;
  letter-spacing: -0.34px;
  text-align: justify;
}
.container .ipt-container input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 14px;
}
.container .main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 30rpx;
}
.container .main text:first-child {
  font-size: 32rpx;
  color: #5B5B5B;
  font-weight: bold;
}
.container .main text:nth-child(2) {
  font-size: 24rpx;
  color: #A6A6A6;
  margin-top: 10rpx;
}
.container .main .input {
  font-size: 30px;
  color: #4A4A4A;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f6f6f6;
}
.container .main .input text {
  font-size: 24px;
  margin-right: 20rpx;
}
.container .main .input input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30px;
  height: 30px;
}
.container .main view:nth-child(3) {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;
}
.container .main view:nth-child(3) image {
  width: 30rpx;
  height: 30rpx;
}
.container .main view:nth-child(3) text:nth-child(2) {
  font-size: 24rpx;
  color: #9B9B9B;
  margin: 0 10rpx 0 10rpx;
}
.container .main view:nth-child(3) text:last-child {
  color: #fe5e50;
  font-weight: bold;
}
.container .main view:last-child {
  margin-top: 10rpx;
  font-size: 12px;
  color: #9B9B9B;
  margin-left: 40rpx;
}
.container .confirm {
  position: fixed;
  bottom: 0rpx;
  background: #fe5e50;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  color: #FFFFFF;
  width: 100vw;
  height: 100rpx;
}
.container .confirm:active {
  opacity: 0.8;
}

