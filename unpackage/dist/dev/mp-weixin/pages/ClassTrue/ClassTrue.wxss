.container {
  border-top: 1px solid #F0F0F0;
  background-color: #fff;
}
.container .list {
  padding: 30rpx;
  margin-bottom: 90rpx;
}
.container .list > view {
  margin-bottom: 10rpx;
}
.container .list > view .title {
  font-size: 17px;
  color: #333333;
  font-weight: bold;
  padding-bottom: 30rpx;
}
.container .list > view .items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.container .list > view .items > view {
  width: 150rpx;
  height: 60rpx;
  margin-right: 30rpx;
  border-radius: 4rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: #F6F6F6;
  color: #A6A6A6;
  margin-bottom: 30rpx;
}
.container .list > view .items > view.select {
  background: #fe5e50;
  color: #FFFFFF;
}
.container .list > view .items > view:nth-child(4n) {
  margin-right: 0;
}
.container .confirm {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 90rpx;
  background: #fe5e50;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #FFFFFF;
}
.container .confirm:active {
  opacity: 0.8;
}

