page {
  background: #F7F7F7;
}
.container {
  border-top: 1px solid #F0F0F0;
  background: #FFFFFF;
}
.container .edit-info {
  position: relative;
  padding: 30rpx;
  font-size: 14px;
  color: #333333;
}
.container .edit-info > view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  color: #9B9B9B;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .edit-info > view text:first-child {
  color: #333333;
}
.container .edit-info > view text:last-child {
  margin-right: 20rpx;
}
.container .edit-info > view text:last-child.have {
  color: #333333;
}
.container .right-arrow {
  font-size: 14px;
  color: #333333;
}
.container .line::before {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: 0;
  width: 720rpx;
  height: 1px;
  background: #F0F0F0;
}
.container .line-30 {
  width: 100%;
  height: 30rpx;
  background-color: #F0F0F0;
}
.container .out-login {
  padding: 30rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #D0021B;
}

