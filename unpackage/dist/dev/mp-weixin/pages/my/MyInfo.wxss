page {
  background: #F7F7F7;
}
.container {
  background: #FFFFFF;
}
.container .edit-avatar {
  padding: 30rpx;
  border-top: 1px solid #F0F0F0;
}
.container .edit-avatar > view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .edit-avatar > view .avatar {
  width: 140rpx;
  height: 140rpx;
  background: #f2f2f2;
  border-radius: 50%;
}
.container .edit-avatar > view text {
  font-size: 14px;
  color: #9B9B9B;
  margin-right: 30rpx;
}
.container .edit-info {
  position: relative;
  padding: 30rpx;
}
.container .edit-info .scrollInfo {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 14px;
  color: #333333;
  text-align: right;
  margin-right: 20rpx;
  box-sizing: border-box;
}
.container .edit-info > view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  color: #9B9B9B;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .edit-info > view text:first-child {
  font-size: 14px;
  color: #333333;
}
.container .edit-info > view text:last-child {
  margin-right: 20rpx;
}
.container .edit-info > view text:last-child.have {
  font-size: 14px;
  color: #333333;
}
.container .edit-info.line::before {
  content: "";
  position: absolute;
  left: 30rpx;
  top: 0;
  width: 720rpx;
  height: 1px;
  background: #F7F7F7;
}

